import mongoose from 'mongoose'
const Types = mongoose.Schema.Types

const {{ properCase name }} = new mongoose.Schema({
    type: {
        type: String,
        default: '{{ properCase name }}'
    },
    {{#each fields}}{{camelCase this.name}}: {
        type: Types.{{properCase this.type}},{{#if this.required}}
        required: true,{{/if}}{{#if this.unique}}
        unique: true,{{/if}}
    },
    {{/each}}
}{{#if timestamps}}, {timestamps: true}{{/if}})

export default mongoose.model('{{ camelCase name }}', {{ properCase name }})
